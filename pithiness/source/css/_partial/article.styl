//Optimization Done

icon-size = 32px
icon-gap = 25px

article
  margin-bottom 40px

  h1
    margin-bottom .5em
    font-size 1.3125em

  h2
    margin-bottom .875em
    font-size 1.125em

  h3
    margin-bottom .875em
    font-size 1em

  $h3, & h4,& h5,& h6
    font-size .875em
    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super
  
  p 
    line-height: 1.6;

  header
    border-bottom 1px solid #ececec
    box-shadow 0 5px 8px -5px rgba(0, 0, 0, 0.075)
    .title
      font-size 1.6em
    time
      font-size 0.5em
      margin-bottom 5px
      display block
      line-height 1
      a
        color color-meta

  .entry
    line-height 1.6
    a
      color #149EE7
      &:hover
        text-decoration underline
        color rgba(20, 158, 231, 0.5)
    p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container
      margin-top 15px
      font-size .875em
      line-height 1.5em

    blockquote
      border-top 1px solid color-border
      border-bottom 1px solid color-border
      font-style italic
      font-family font-serif
      font-size 1.2em
      padding 0 30px 15px
      text-align center
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    code, pre
      font-family font-mono !important
      font-size 10pt !important

    code
      background #F8F8F8
      color #333
      padding 0 5px
      margin 0 2px
      border 1px solid #DDD
      border-radius 3px
      white-space nowrap

    pre
      margin 15px 0

    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

    h1, h2
      font-weight bold
      border-bottom 1px solid color-border
      padding-bottom 10px
      margin-top 20px

    h3, h4, h5, h6
      font-weight normal

    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .caption
      display block
      color color-meta
      font-size 0.9em

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em

  footer
    margin-top 15px
    padding-top 10px
    padding-bottom 10px
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px
    a
      color color-meta
      font-size 12px
      &:hover
        color rgba(0, 0, 0, 0.95)
        opacity 1
    .widget
      a
        margin-right 5px
