<% if (site.tags.length){ %>
<nav class="tags">
  <h3 class="title"><%= __('tags') %></h3>
  <ul>
  <% site.tags.sort('name').each(function(item){ %>
    <li><a href="<%- config.root %><%- item.path %>"><%= item.name %></a>&nbsp;<small>(<%= item.posts.length %>)</small></li>
  <% }); %>
  </ul>
</nav>
<% } %>