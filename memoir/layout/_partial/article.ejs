<div class="wide">
    <div class="center">
        <div class="head">
            <div class="timeLine">
                <time datetime="<%= item.date.toDate().toISOString() %>" class="date">
                    <a href="<%- config.root %><%- item.path %>"><%= item.date.format(config.date_format) %></a>
                </time>
            </div>
        </div>
        <%- partial('post/title') %>
        <div class="entry">
        <% if (item.excerpt && index){ %>
          <%- item.excerpt %>
        <% } else { %>
          <%- item.content %>
        <% } %>
        <% if (index){ %>
          <% if (item.excerpt){ %>
          <a href="<%- config.root %><%- item.path %>#more" class="more-link">More</a>
          <% } %>
        <% } %>
        </div>
    </div>
</div>
<%- partial('comment') %>